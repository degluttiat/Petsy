<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="140dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="0.5dp"
    android:layout_marginEnd="0.5dp"
    android:layout_marginBottom="1dp"
    android:columnWidth="100dp">

    <ImageView
        android:id="@+id/pet_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:scaleType="centerCrop" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textViewPostDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearlayoutPetDetails"
        android:layout_alignStart="@+id/pet_picture"
        android:layout_alignTop="@+id/pet_picture"
        android:layout_alignEnd="@+id/pet_picture"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:lineSpacingExtra="8sp"
        android:marqueeRepeatLimit="marquee_forever"
        tools:text="@string/_123456789"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linearlayoutPetDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pet_picture"
        android:background="#99000000"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginStart="4dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>